PATH=/bin:/sbin:/usr/bin:/usr/sbin
export PATH

commands="awk basename chmod chown date dirname echo file find grep id mv open pax ps rm sed sort touch uname"

# Check that the required BSD command are installed
for i in $commands ; do
	if [ ! -x "/usr/bin/$i" -a ! -x "/bin/$i" -a ! -x "/usr/sbin/$i" -a ! -x "/sbin/$i" ] ; then
			# Return 96 + 16 if a command is not found
		exit 112;
	fi
done

# Check that the user is running Mac OS X 10.4 or higher
if [ -x "/usr/bin/sw_vers" ] ; then
	# Return 96 + 17 if it is a bad version
	version=`/usr/bin/sw_vers | grep '^ProductVersion:' | awk '{ print $2 }'`
	case "$version" in
		10.[0123]) exit 113;;
		10.[0123].*) exit 113;;
	esac
fi

# Check that the user is running on the correct hardware
target_machine="$(TARGET_MACHINE)"
machine=`uname -p`
if [ "$target_machine" != "$machine" ] ; then
	# Return 96 + 18, 19, or 20 if we are running the incorrect hardware
	case "$machine" in
		i386) exit 114;;
		powerpc) exit 115;;
		*) exit 116;;
	esac
fi

# Check that the user has a supported Java version
javafound=
for i in `find -L "/System/Library/Frameworks/JavaVM.framework/Versions" -type d -maxdepth 1` ; do
	if [ -r "$i/Libraries/libjvm.dylib" ] ; then
		case `basename "$i"` in
			1.4.[23]*) javafound="$i" ; break;;
			1.5.*) javafound="$i" ; break;;
			1.6.*) javafound="$i" ; break;;
		esac
	fi
done
if [ -z "$javafound" ] ; then
	# Return 96 + 24 if we didn't find a supported Java version
	exit 120;
fi

scriptdir=`dirname "$0"`
if [ -d "$scriptdir" -a -f "$scriptdir/installutils" ] ; then

	. "$scriptdir/installutils"

	# Check that no instances of the application are running
	while read i ; do
		# Return 96 + 25 if any instances are running
		check_running "$i" && exit 121
	done << !
`ps -a -x -w -w -o command | grep '/Contents/MacOS/soffice\.bin' | sed 's#/Contents/MacOS/soffice\.bin.*$##'`
!

fi

exit 0
